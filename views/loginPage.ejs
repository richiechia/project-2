<div class="container">
  <div class="row content">
    <div class ="col-md-6 mb-3">
      <img src="mooning.jpg" class="img-fluid" alt = "image">
    </div> 
    <div class = "col-md-6">
      <h3 class ="signin-text mb-3"> Login </h3>
      <form class="needs-validation" novalidate action="/loggedIn" method="POST">
        <div class="form-group mb-3">
          <label for ="<%=phone%>"> <%=entryList[phone].label%></label>
          <input type="<%=phone%>" name ="<%=phone%>" class="form-control">
        </div>
        <div class="form-group mb-3">
          <label for="<%=password%>"><%=entryList[password].label%></label>
          <input type="password" name = "<%=password%>" class="form-control"> 
        </div>
        <div class="form-group form-check mb-3">
          <input type="checkbox" name="checkbox" class="form-check-input" id="checkbox">
          <label class="form-check-label" for="checkbox"> Remember Me </label>
        </div>
        <div class="error-message">
        <% if (typeof message !== 'undefined') { %>
          <p><%=message%></p>
        <% } %>
        </div>
        <button class = "btn btn-class">Login</button>
      </form>
    </div>
    </div>
  </div>
</div>

